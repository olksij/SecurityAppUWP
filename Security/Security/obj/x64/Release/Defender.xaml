<Page
    x:Class="Security.Defender"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Security"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Rectangle Height="115" Margin="0,0,0,0" VerticalAlignment="Top">
            <Rectangle.Fill>
                <AcrylicBrush TintOpacity="0.8" BackgroundSource="HostBackdrop" TintColor="WhiteSmoke" FallbackColor="WhiteSmoke"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock x:ConnectionId='2' x:Name="txtBlock" HorizontalAlignment="Left" Margin="143,39,0,0" Text="Defender" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="28"                                             />
        <TextBlock x:ConnectionId='3' x:Name="txtBlockD" HorizontalAlignment="Left" Margin="58,234,0,0" Text="Seems all good" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"                                             />
        <Button x:ConnectionId='4' HorizontalAlignment="Left" Height="75" Margin="21,21,21,0" VerticalAlignment="Top" Width="75"                 Style="{ThemeResource ButtonRevealStyle}" Background="#13000000" Foreground="Black" FocusVisualPrimaryBrush="#1E000000">
            <FontIcon Glyph="&#xE80F;" FontSize="25"/>
         </Button>
        <Button x:ConnectionId='5' x:Name="CheckButton" Content="Check now" HorizontalAlignment="Left" Margin="58,280,0,0" VerticalAlignment="Top" FontSize="18" ToolTipService.ToolTip="Right now this app dont check your PC on viruses. Wait for next updates!"                           Height="40" Width="130" Style="{ThemeResource ButtonRevealStyle}"/>
        <TextBlock HorizontalAlignment="Left" Margin="58,162,0,0" Text="Viruses" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30"/>
        <ProgressBar x:ConnectionId='6' x:Name="progresB" Visibility="Collapsed" IsIndeterminate="True" Height="9" Width="400" Margin="58,277,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />

    </Grid>
</Page>

